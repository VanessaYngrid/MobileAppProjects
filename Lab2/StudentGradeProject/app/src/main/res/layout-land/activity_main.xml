<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/student_name_text_view"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/student_name_text_view"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/grade_average_text_view"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/grade_average_text_view"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="40dp"
        android:layout_gravity="top|end"/>

    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

    <Button
        android:id="@+id/display_student_grade_average_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/display_student_grade_average_button"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/next_student_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/next_student_button"
        android:layout_marginTop="10dp"
        app:cornerRadius="5dp"/>

    <Button
    android:id="@+id/previous_student_button"
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:text="@string/previous_student_button"
        android:layout_marginTop="10dp"
    app:cornerRadius="5dp"/>

    </LinearLayout>
</FrameLayout>