<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/employee_id_text_view"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="@string/employee_id_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/employee_name_text_view"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/employee_name_text_view"
        app:layout_constraintEnd_toEndOf="@+id/employee_id_text_view"
        app:layout_constraintStart_toStartOf="@+id/employee_id_text_view"
        app:layout_constraintTop_toBottomOf="@+id/employee_id_text_view" />

    <TextView
        android:id="@+id/employee_salary_text_view"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/employee_salary_text_view"
        app:layout_constraintEnd_toEndOf="@+id/employee_name_text_view"
        app:layout_constraintStart_toStartOf="@+id/employee_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/employee_name_text_view" />

    <TextView
        android:id="@+id/display_total_tax_text_view"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/display_total_tax_text_view"
        app:layout_constraintEnd_toEndOf="@+id/employee_salary_text_view"
        app:layout_constraintStart_toStartOf="@+id/employee_salary_text_view"
        app:layout_constraintTop_toBottomOf="@+id/employee_salary_text_view" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="400dp"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="170dp">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/prev_employee_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/prev_employee_button" />

        <Button
            android:id="@+id/next_employee_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/next_employee_button" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/employee_tax_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/employee_tax_button" />


    </LinearLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>