<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical" >

    <TextView
        android:id="@+id/facullty_no_text_view"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="@string/faculty_no_text_view" />
    <TextView
        android:id="@+id/faculty_last_name_text_view"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/faculty_last_name_text_view" />

    <TextView
        android:id="@+id/faculty_first_name_text_view"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/faculty_first_name_text_view" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="end|top"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical" >

    <TextView
        android:id="@+id/faculty_salary_text_view"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="@string/faculty_salary_text_view"/>

    <TextView
        android:id="@+id/faculty_rate_bonus_text_view"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/faculty_rate_bonus_text_view"/>

    <TextView
        android:id="@+id/faculty_amount_bonus_text_view"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/faculty_amount_bonus_text_view" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/prev_faculty_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:text="@string/prev_faculty_button" />

        <Button
            android:id="@+id/next_faculty_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:text="@string/next_faculty_button" />
    </LinearLayout>

        <Button
            android:id="@+id/faculty_details_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:text="@string/faculty_details_button" />

        <Button
            android:id="@+id/all_faculties_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:text="@string/all_faculties_button" />
    </LinearLayout>

</FrameLayout>