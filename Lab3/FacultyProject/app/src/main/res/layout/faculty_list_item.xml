<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/faculty_bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:text="Faculty Bonus: "
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/faculty_bonus"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/faculty_lname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faculty LName: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/faculty_fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faculty FName: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/faculty_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faculty Salary: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/faculty_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faculty Id: "
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider" />

</RelativeLayout>