<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:text="@string/title_text_view"
        android:textColorLink="#673AB7"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.21" />

    <EditText
        android:id="@+id/input_temperature_F_edit_text"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/input_temperature_F_edit_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/title_text_view"
        app:layout_constraintStart_toStartOf="@+id/title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view" />

    <TextView
        android:id="@+id/temperature_celsius_text_view"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:text="@string/temperature_celsius_text_view"
        app:layout_constraintEnd_toEndOf="@+id/input_temperature_F_edit_text"
        app:layout_constraintStart_toStartOf="@+id/input_temperature_F_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/input_temperature_F_edit_text" />

    <Button
        android:id="@+id/convert_temperature_button"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:text="@string/convert_temperature_button"
        app:layout_constraintEnd_toEndOf="@+id/temperature_celsius_text_view"
        app:layout_constraintStart_toStartOf="@+id/temperature_celsius_text_view"
        app:layout_constraintTop_toBottomOf="@+id/temperature_celsius_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>